#!/bin/bash
wireshark="docker run --rm \
                      --net=host \
                      --privileged \
	                  -v /etc/localtime:/etc/localtime:ro \
	                  -v /tmp/.X11-unix:/tmp/.X11-unix \
	                  -e DISPLAY=unix$DISPLAY \
	                  --name wireshark \
	                  jess/wireshark"

exec $wireshark "$@"
